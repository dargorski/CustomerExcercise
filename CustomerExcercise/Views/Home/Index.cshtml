@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>CustomerExcercise</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Customers</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: customers">
                    <li>
                        <strong><span data-bind="text: Name"></span></strong> <strong><span data-bind="text: Surname"></span></strong>
                        <small><a href="#" data-bind="click: $parent.getCustomerDetail">Details</a></small>
                        <small><a href="#" data-bind="click: $parent.deleteCustomer">Delete</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>Name</td><td data-bind="text: detail().Name"></td></tr>
                <tr><td>Surname</td><td data-bind="text: detail().Surname"></td></tr>
                <tr><td>Number</td><td data-bind="text: detail().Number"></td></tr>
                <tr><td>Address</td><td data-bind="text: detail().Address"></td></tr>
                
            </table>
        </div>
    </div>

    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Customer</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addCustomer">
                    

                    <div class="form-group" data-bind="with: newCustomer">
                        <label for="inputName" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                        </div>

                        <label for="inputSurname" class="col-sm-2 control-label">Surname</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputSurname" data-bind="value:Surname" />
                        </div>

                        <label for="inputNumber" class="col-sm-2 control-label">Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNumber" data-bind="value:Number" />
                        </div>

                        <label for="inputAddress" class="col-sm-2 control-label">Address</label>
                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputAddress" data-bind="value:Address" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>