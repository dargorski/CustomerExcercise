@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>CustomerExcercise</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Customers</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: customers">
                    <li>
                        <strong><span data-bind="text: Name"></span></strong> <strong><span data-bind="text: Surname"></span></strong>
                        <small><a href="#" data-bind="click: $parent.getCustomerDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>Name</td><td data-bind="text: detail().Name"></td></tr>
                <tr><td>Surname</td><td data-bind="text: detail().Surname"></td></tr>
                <tr><td>Number</td><td data-bind="text: detail().Number"></td></tr>
                <tr><td>Address</td><td data-bind="text: detail().Address"></td></tr>
                
            </table>
        </div>
    </div>

    <!-- /ko -->

    <div class="col-md-4">
        <!-- TODO: Add new book -->
    </div>
</div>